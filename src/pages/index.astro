---
import Layout from "../layouts/Layout.astro";
import BentoGrid from "../components/BentoGrid.astro";
import SwiperHero from "../components/SwiperHero.astro";
import SectionTitle from "../components/SectionTitle.astro";
import PageTitle from "../components/PageTitle.astro";
import AntesDespues from "../sections/AntesDespues.astro";
import PreguntasFrecuentes from "../sections/PreguntasFrecuentes.astro";
---

<Layout title="Marcelo Aparicio - Muebles a medida">
  <PageTitle title="Galería" />
  <BentoGrid />
  <SectionTitle
    title="Hecho a medida"
    subtitle="Hacemos tus ideas realidad"
    id="swiperHero"
  />
  <SwiperHero />
