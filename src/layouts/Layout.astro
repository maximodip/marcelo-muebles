---
import "@fontsource/lateef/400.css";
import "@fontsource/lateef/500.css";
import "@fontsource/lateef/600.css";
import "@fontsource/lateef/700.css";
import "@fontsource/lateef/800.css";
import Navbar from "../components/Navbar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="mx-auto max-w-screen-xl">
    <Navbar />
    <main class="container mx-auto">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  body {
    font-family: "Lateef", serif;

    /* background: url("/Wood_background.webp") no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover; */

    background-color: #ddd;
  }

  html {
    scroll-behavior: smooth;
  }

  .menu-open {
    margin-top: 50px; /* Ajusta la cantidad de espacio que quieres que el contenido se mueva hacia abajo */
    transition: margin-top 0.3s ease; /* Agrega una transici√≥n suave al movimiento */
  }
</style>
