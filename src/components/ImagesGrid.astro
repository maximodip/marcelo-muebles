---
const { images } = Astro.props;
---

<section class="container mx-auto mb-4">
  <div class="mx-auto grid grid-flow-dense grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 2xl:grid-cols-4 p-4 sm:p-0 animate-fade-in animate-duration-normal">
    {
      images.map((image) => (
          <img
            src={image.src}
            class="h-auto rounded-lg shadow-md object-cover"
            loading="lazy"
          />
      ))
    }
  </div>
</section>
