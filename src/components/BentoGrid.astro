---
import { Image } from "astro:assets";
---

<section class="md:mb-36 px-2 md:px-0 animate-fade-in" id="first-content">
  <div>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-4 h-full">
      <div
        class="col-span-2 sm:col-span-1 md:col-span-2 h-auto md:h-full flex flex-col"
      >
        <a
          href="/living"
          data-astro-prefetch
          class="group relative flex flex-col overflow-hidden rounded-lg px-4 pb-4 pt-40 flex-grow"
        >
          <Image
            src="/muebletele.webp"
            width="720"
            height="960"
            alt=""
            loading="eager"
            class="absolute inset-0 h-full w-full object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out"
          />
          <div
            class="absolute inset-0 bg-gradient-to-b from-gray-900/25 to-gray-900/5"
          >
          </div>
          <span
            class="z-10 text-2xl font-medium text-white absolute top-0 left-0 p-4 xs:text-xl md:text-3xl"
          >
            Living
          </span>
        </a>
      </div>
      <div class="col-span-2 sm:col-span-1 md:col-span-2">
        <a
          href="/cocina"
          class="group relative flex flex-col overflow-hidden rounded-lg px-4 pb-4 pt-40 mb-4"
        >
          <Image
            width="916"
            height="960"
            src="/cocinabento.webp"
            alt=""
            class="absolute inset-0 h-full w-full object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out"
          />
          <div
            class="absolute inset-0 bg-gradient-to-b from-gray-900/25 to-gray-900/5"
          >
          </div>
          <span
            class="z-10 text-2xl font-medium text-white absolute top-0 left-0 p-4 xs:text-xl md:text-3xl"
          >
            Cocina
          </span>
        </a>
        <div class="grid gap-4 grid-cols-2 sm:grid-cols-2 lg:grid-cols-2">
          <a
            href="/vanitory"
            class="group relative flex flex-col overflow-hidden rounded-lg px-4 pb-4 pt-40"
          >
            <Image
              width="1080"
              height="1440"
              src="/vanitory.webp"
              alt=""
              class="absolute inset-0 h-full w-full object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out"
            />
            <div
              class="absolute inset-0 bg-gradient-to-b from-gray-900/25 to-gray-900/5"
            >
            </div>
            <span
              class="z-10 text-2xl font-medium text-white absolute top-0 left-0 p-4 xs:text-xl md:text-3xl"
            >
              Vanitory
            </span>
          </a>
          <a
            href="/placard"
            class="group relative flex flex-col overflow-hidden rounded-lg px-4 pb-4 pt-40"
          >
            <Image
              width="1200"
              height="1600"
              src="/placard.webp"
              alt=""
              class="absolute inset-0 h-full w-full object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out"
            />
            <div
              class="absolute inset-0 bg-gradient-to-b from-gray-900/25 to-gray-900/5"
            >
            </div>
            <span
              class="z-10 text-2xl font-medium text-white absolute top-0 left-0 p-4 xs:text-xl md:text-3xl"
            >
              Placard
            </span>
          </a>
        </div>
      </div>
      <div
        class="col-span-2 sm:col-span-1 md:col-span-1 h-auto md:h-full flex flex-col"
      >
        <a
          href="/vestidor"
          class="group relative flex flex-col overflow-hidden rounded-lg px-4 pb-4 pt-40 flex-grow"
        >
          <Image
            width="1080"
            height="1350"
            src="/vestidor.webp"
            alt=""
            class="absolute inset-0 h-full w-full object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out"
          />
          <div
            class="absolute inset-0 bg-gradient-to-b from-gray-900/25 to-gray-900/5"
          >
          </div>
          <span
            class="z-10 text-2xl font-medium text-white absolute top-0 left-0 p-4 xs:text-xl md:text-3xl"
          >
            Vestidor
          </span>
        </a>
      </div>
    </div>
  </div>
</section>
